<%- include('../header.ejs'); %>
	<header>
		<h1> NTalk </h1>
		<h4> Contacts list </h4>
	</header>
	<section>
		<form action = "/contact" method="post">
			<input type="text" name="contact[name]" placeholder="Name">
			<input type="text" name="contact[email]" placeholder="Email">
			<button type="submit"> Register </button>
		</form>
		<table>
			<thead>
				<tr>
					<th>Name</th>
					<th>Email</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				<% contacts.forEach((contact, index) => { %>
					<tr>
						<td>
							<%- contact.name %>
						</td>
						<td>
							<%- contact.email %>
						</td>
						<td>
							<a href="/contact/<%- index %>"> Details </a>
						</td>
					</tr>
					<% }) %>
			</tbody>
		</table>
	</section>

	<%- include('../exit.ejs'); %>
	<%- include('../footer.ejs'); %>